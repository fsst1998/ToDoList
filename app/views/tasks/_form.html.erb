<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <font size="4"><%= f.label :due_date , "期日"  %></font><br>
    <%= f.date_select :due_date %>
  </div>
  <div class="field">
    <font size="4"><%= f.label :category_id , "カテゴリーID"  %></font><br>
    <%= f.collection_select :category_id, Category.all, :id, :categoryname %>
  </div>
  <div class="field">
    <font size="4"><%= f.label :name , "やること"   %></font><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <font size="4"><%= f.label :done ,"終了" %></font><br>
    <%= f.check_box :done %>
  </div>
  <div class="field">
    <font size="4"><%= f.label :user_id , "ユーザーID" %></font><br>
    <%= f.collection_select :user_id, User.all, :id, :username %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
