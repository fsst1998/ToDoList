<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th><h2>ユーザーID</h2></th>
      <th><h2>ユーザー名</h2></th>
      <th><h2>パスワード</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><h2><%= user.userid %></h2></td>
        <td><h2><%= user.username %></h2></td>
        <td><h2><%= user.password %></h2></td>
        <td><h2><%= link_to '詳細', user %></h2></td>
        <td><h2><%= link_to '編集', edit_user_path(user) %></h2></td>
        <td><h2><%= link_to '削除', user, method: :delete, data: { confirm: '削除しますか？' } %></h2></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1><%= link_to 'ユーザー登録', new_user_path %></h1>
